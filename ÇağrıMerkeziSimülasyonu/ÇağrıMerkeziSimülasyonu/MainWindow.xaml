<Window x:Class="ÇağrıMerkeziSimülasyonu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ÇağrıMerkeziSimülasyonu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Üst başlık -->
        <TextBlock Text="Çağrı Merkezi Eğitim Simülatörü" 
                   FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <!-- Müşteri senaryosu -->
        <TextBlock Text="Müşteri Şikayeti:" FontSize="16" 
                   Margin="10,50,10,0" VerticalAlignment="Top"/>
        <TextBox Name="txtSenaryo" IsReadOnly="True" 
                 Margin="10,80,10,0" Height="100" VerticalAlignment="Top"/>

        <!-- Temsilci yanıtı -->
        <TextBlock Text="Temsilci Yanıtı:" FontSize="16" 
                   Margin="10,200,10,0" VerticalAlignment="Top"/>
        <TextBox Name="txtYanıt" Margin="10,230,10,0" Height="100" VerticalAlignment="Top"/>

        <!-- Gönder Butonu -->
        <Button Content="Yanıtı Gönder" Width="120" Height="40" 
                HorizontalAlignment="Right" Margin="0,350,20,0"
                VerticalAlignment="Top" Click="BtnGonder_Click"/>

        <!-- Puanlama ve Geri Bildirim -->
        <TextBlock Name="lblSonuc" FontSize="16" 
                   Margin="10,350,150,0" VerticalAlignment="Top" Text=""/>
    </Grid>
</Window>
